
{{#each surveys as |survey|}}
  <div data-id="{{survey._id}}" class="card m-1" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title">{{survey.question}}</h5>
      <p class="card-text">Asked at: {{survey.location}}</p>
    </div>
    <div class="card-body survey-stats hidden">
      <p class="card-text">response stats will go here</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <button class="btn btn-block btn-outline-dark answer-one" value="yes" type="submit">yes</button>
      </li>
      <li class="list-group-item">
        <button class="btn btn-block btn-outline-dark answer-two" value="no" type="submit">no</button>
      </li>
    </ul>
    <div class="card-body align-self-center">
      <p class="card-text">submitted by <span class="text-secondary">{{survey.author}}</span></p>
    </div>
  </div>
{{/each}}
